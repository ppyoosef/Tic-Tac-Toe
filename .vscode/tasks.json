{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Tic Tac Toe App",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "-o",
        "build/tic-tac-toe.exe",
        "-I${workspaceFolder}\\include",
        "-L${workspaceFolder}\\lib",
        "-lSDL3"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "options": {
        "shell": {
          "executable": "C:\\Windows\\System32\\cmd.exe",
          "args": ["/d", "/c"]
        }
      }
    }
  ]
}
